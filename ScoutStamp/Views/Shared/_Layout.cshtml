<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScoutStamp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScoutStamp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navy border-bottom box-shadow mb-2">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold m-2 p-2" style="color:midnightblue" asp-area="" asp-controller="Home" asp-action="Index">ScoutStamp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Produto" asp-action="Produto">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Cliente" asp-action="Cliente">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Fornecedor" asp-action="Fornecedor">Fornecedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Pedido" asp-action="Pedido">Pedidos</a>
                        </li>
                    </ul>

                    <!-- Botão de Login alinhado à direita -->
                    <div class="ms-auto">
                        <a class="btn btn-light fw-bold m-3" style="color:cornflowerblue" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3 mb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-navy fw-bold" style="margin-top: 50px">
        <div class="container text-light">
            &copy; 2025 - ScoutStamp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
